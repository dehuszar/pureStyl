}

.rounded-form {
    @extend $pure-form;
    @extend $pure-form-stacked;

    button,
    input {
        @extend $pure-button;
        @extend $pure-form $pure-input-rounded;
    }
}

.selects {
    @extend $pure-form;
    @extend $pure-form-stacked;
}

.checkboxes-radios {
    @extend $pure-form;

    .checkbox {
        @extend $pure-form $pure-checkbox;
    }

    .radio {
        @extend $pure-form $pure-radio;
    }
}

.help-text {
    @extend $pure-form;
    @extend $pure-form-stacked;

