// Menus
.menu-horz,
.menu-vert {
    @extend $pure-menu;
    @extend $pure-menu-open;

    > a,
    .menu-heading {
        @extend $pure-menu a;
        @extend $pure-menu-heading;
    }

    .selected {
        a {
            @extend $pure-menu-selected a;
        }
    }

    .parent {
        @extend $pure-menu-can-have-children;

        > a {
            @extend $pure-menu-can-have-children $pure-menu-label
        }
    }

    [disabled] {
        @extend $pure-menu-disabled;
    }
}

.menu-horz {
    @extend $pure-menu-horizontal;
    
    > a,
    .menu-heading {
        @extend $pure-menu-horizontal $pure-menu-heading;
    }

    .parent {
        @extend $pure-menu-horizontal $pure-menu-can-have-children;

        > a {
            @extend $pure-menu-horizontal $pure-menu-can-have-children $pure-menu-label;
        }
    }
}

.paginator {
