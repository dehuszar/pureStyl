html, 
button, 
input, 
select, 
textarea, 
$pure-g [class *= "pure-u"] {
    font-family: sans-serif;
    font-weight: 100;
    letter-spacing: 0.01em;
}

button,
input {
    line-height: normal;
}

button,
input,
select,
textarea {
    font-size: 100%;
    margin: 0;
    vertical-align: baseline;
}

.content {
    margin-left: auto;
    margin-right: auto;
    padding-left: 1em;
    padding-right: 1em;
    max-width: 768px;

    @media (min-width: 48em) {
        padding-left: 2em;
        padding-right: 2em;
    }
}

img {
    @extend $pure-img;
}

// BUTTON RULES
// Here we're direct mapping just to test / demo the settings

.regular-buttons {
    button, a {
        @extend $pure-button;
    }
}

.disabled-buttons {
    button[disabled],
    a {
        @extend $pure-button;
        @extend $pure-button-disabled;
    }
}

.active-buttons {
    button,
    a {
        @extend $pure-button;
        @extend $pure-button-active;
    }
}

.primary-buttons {
    button,
    a {
        @extend $pure-button;
        @extend $pure-button-primary;
    }
}

.custom-button-green {
    button, a {
        @extend $pure-button;
        background: #16bb51;
        border-radius: 6px;
        color: white;
        font-weight:bold;
        padding: 0.8em 2.5em;
        text-shadow: 0 1px 1px rgb(22, 116, 29);
        text-transform: uppercase;
    }
}

.custom-button-red {
    button, a {
        @extend $pure-button;
        background: red;
        border-radius: 20px;
        border: 3px solid rgb(131, 2, 2);
        color: white;
        font-weight: bold;
        text-shadow: 1px 1px 1px rgb(170, 46, 23);
        text-transform: uppercase;
    }        
}

.custom-button-yellow {
    button, a {
        @extend $pure-button;
        background: rgb(255, 236, 15);
        border: 1px solid rgb(201, 189, 52);
        color: rgb(146, 128, 32);
        text-shadow: -1px 1px 1px white;
    }
}

.custom-button-wedding {
    button, a {
        @extend $pure-button;

        &:hover,
        &:focus {
            background: #555;
            color: #eee;
        }
    }
}

.pure-button-wedding:active {
    background: #222;
    color: #fff;
    box-shadow: none;
}

.form-buttons {
    > * {
        @extend $pure-button;
        @extend $pure-button-primary;
    }
}

.custom-fonts {
    font-family: 'Open Sans', sans-serif;

    > * {
        @extend $pure-button;
        @extend $pure-button-primary;
    }
}

// FORMS
.inline-form {
    @extend $pure-form;

    button {
        @extend $pure-button;
        @extend $pure-button-primary;
    }
}

.multi-col-grid-form {
    @extend $pure-form;
    @extend $pure-form-stacked;

    select {
        @extend $pure-form $pure-input-1-2;
    }

    button {
        @extend $pure-button;
        @extend $pure-button-primary;
    }

    .pure-checkbox {
        @extend $pure-form $pure-checkbox;
    }
